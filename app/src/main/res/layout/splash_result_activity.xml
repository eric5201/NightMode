<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF212326"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/back_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_profile_center_back_normal" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/icon_launcher"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_address_selected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/icon_launcher"
            android:text="开启成功"
            android:textColor="#FFFAFAFA"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon_launcher"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/icon_launcher"
            android:text="开始您的护眼旅程"
            android:textColor="#CCFAFAFA"
            android:textSize="12sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="18dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="结果页广告展示区"
            android:textColor="#000000"
            android:textSize="20sp" />
    </FrameLayout>

</RelativeLayout>